<!DOCTYPE html>
<html lang="en">
    <head>
            <% include ../static/partials/head.ejs %>
    </head>

    <body>
            <% include ../static/partials/messages.ejs %>
        <!-- NAVIGATION -->
        <% include ../static/partials/navbar.ejs %> 

        <!-- PAGE CONTENT-->
        <main class="container">
            <h1>Edit Wiki</h1>
            <form action="/wikis/<%= wiki.id %>/update" method="post">

                <% if(currentUser && currentUser.role == 1 && wiki.private == true) { %>
                    <a href="/wikis/<%= wiki.id %>/addCollaborator" class="btn btn-success">Add Collaborators</a>
                    <a href="/wikis/<%= wiki.id %>/removeCollaborator" class="btn btn-danger">Remove Collaborators</a>
              <%  } %>
                
                <div class="form-group">
                    <label for="title">Title</label>
                    <input value="<%= wiki.title %>" type="text" name="title" class="form-control" placeholder="title"/>
                </div>
                <div class="form-group">
                        <label for="body">Body</label>
                        <textarea rows="4" name="body" class="form-control" placeholder="title"><%= wiki.body %></textarea>
                    </div>
                
                <button type="submit" class="btn btn-primary">Update</button> 
            </form>

        </main>
        <!--END CONTAINER-->
            <% include ../static/partials/baseScripts.ejs %>
        </body>
    
    </html>
    