<!DOCTYPE html>
<html lang="en">
    <head>
            <% include ../static/partials/head.ejs %>
    </head>

    <body>
            <% include ../static/partials/messages.ejs %>
        <!-- NAVIGATION -->
        <% include ../static/partials/navbar.ejs %> 

        <!-- PAGE CONTENT-->
        <main class="container">
            <h1>New Wiki</h1>
            <form action="/wikis/create" method="post">
                
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" class="form-control" placeholder="title"/>
                </div>
                <div class="form-group">
                        <label for="body">Body</label>
                        <textarea id="text-input" rows="20" cols="80" name="body" class="form-control" placeholder="enter wiki body"></textarea>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="private" id="private">
                        <label class="form-check-label" for="private">
                            Private Wiki (Premium Users Only)
                        </label>
                    </div>
                    
                
                <button type="submit" class="btn btn-primary">Submit</button> 
            </form>

        </main>
        <!--END CONTAINER-->
            <% include ../static/partials/baseScripts.ejs %>
        </body>
    
    </html>
    