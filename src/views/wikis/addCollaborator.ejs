<!DOCTYPE html>
<html lang="en">
    <head>
            <% include ../static/partials/head.ejs %>
    </head>

    <body>
        <!-- NAVIGATION -->
        <% include ../static/partials/navbar.ejs %> 

        <!-- PAGE CONTENT-->
        <main class="container">
            <form action="/wikis/<%= wiki.id %>/addCollaborator" method="post">

                <div class="form-group">
                        <% users.forEach((user) => { %>

                    <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Select User</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="count"></td>
                                    <td>TBD</td>
                                    <td><%= user.email %></td>
                                    <td>
                                        <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="userId" value="<%= user.id %>" id="selectUser">
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
              <%  }) %>

              </div>
              
              <button type="submit" class="btn btn-success">Add Users as Collaborators</button>
            </form>
        </main>
   <!--END CONTAINER-->
   <% include ../static/partials/baseScripts.ejs %>
</body>

</html>